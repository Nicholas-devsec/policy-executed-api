[Unit]
Description=Policy Executed API Service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/var/www/policy-executed-api

ExecStart= /var/www/policy-executed-api/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000


Restart=always
RestartSec=5

# Basic hardening (very important)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
